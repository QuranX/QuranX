@using QuranX.Web.Views.HadithIndex
@model BrowseHadithIndexViewModel

@{
    ViewBag.Title = $"{Model.HadithIndexHeaderViewModel.Collection.Name} Hadiths";
}

@{ Html.RenderPartial("HadithIndexHeader", Model.HadithIndexHeaderViewModel); }
<ul class="hadith-index__list">
    @foreach (string nextValue in Model.NextReferencePartValueSelection)
    {
        <li>
            <a href="@Model.HadithIndexHeaderViewModel.UrlSoFar/@Model.NextReferencePartName-@nextValue/">
                @Model.NextReferencePartName @nextValue
            </a>
        </li>
    }
</ul>
@{ Html.RenderPartial("Adverts"); }