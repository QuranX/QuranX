@using QuranX.Persistence.Models
@model IEnumerable<Commentator>

@{
	ViewBag.Title = "Qur'anic commentators";
}

<h1>@ViewBag.Title</h1>
<ol class="commentary__commentator-list">
	@foreach (Commentator commentator in Model)
	{
		<li>
			<a href="/Tafsir/@commentator.Code/1.1">
				<div class="row">
					<span class="col-xs-4 col-sm-3 col-md-2">@commentator.Code</span>
					<span class="col-xs-8 col-sm-9 col-md-10">@commentator.Description</span>
				</div>
			</a>
		</li>
	}
</ol>